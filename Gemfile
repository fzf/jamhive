source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'bootstrap-sass'
gem 'carrierwave'
gem 'haml-rails'
gem 'jquery-rails'
gem 'nested_form'
gem 'pg'
gem 'pry'
gem 'pry-doc'
gem 'pry-rails'
gem 'sass-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'coffee-rails'
  gem 'jquery-ui-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development, :test do
  gem 'dotenv-rails'
  gem 'rspec-rails'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'launchy'
  gem 'mysql2'              # for ci against mysql
  gem 'poltergeist'
  gem 'simplecov',          require: false
  gem 'syntax'
  gem 'validation_matcher'
end
